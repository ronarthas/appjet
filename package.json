{
  "name": "lumina",
  "version": "0.1.0",
  "description": "Modern desktop apps with web technologies",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "type": "module",
  "bin": {
    "create-lumina": "./bin/create.js"
  },
  "files": [
    "dist/",
    "bin/",
    "templates/"
  ],
  "scripts": {
    "build:framework": "bun build src/lumina/index.ts --outdir dist --target node",
    "build:app": "bun run --env-file=.env --env-file=.env.production scripts/build.ts",
    "dev": "bun --env-file=.env --env-file=.env.development run test/basic-app.ts",
    "prepublish": "bun run build:framework"
  },
  "keywords": [
    "desktop",
    "app",
    "webview",
    "bun",
    "vue",
    "electron-alternative"
  ],
  "license": "MIT",
  "dependencies": {
    "webview-bun": "^2.4.0"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
